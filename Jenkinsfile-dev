pipeline {
    agent {
        label 'agent-dso'
    }

    environment {
        AWS_DEFAULT_REGION = 'ap-southeast-3'
    }

    stages {
        stage('Checkout') {
            steps {
                checkout([
                    $class: 'GitSCM',
                    branches: [[name: '*/release/dev']],
                    userRemoteConfigs: [[
                        url: 'https://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@github.com/Jobseeker-company/hrms-api-organization.git'
                    ]]
                ])
            }
        }

        stage('Load Configuration') {
            steps {
                configFileProvider([
                    configFile(fileId: 'HRMS_Organization_Serverless_Dev', variable: 'SERVERLESS_CONFIG'),
                    configFile(fileId: 'HRMS_Organization_Env_Dev', variable: 'PARAMETERS_CONFIG')
                ]) {
                    sh '''
                        cp $SERVERLESS_CONFIG HRMS_Organization_Serverless_Dev
                        cp $PARAMETERS_CONFIG HRMS_Organization_Env_Dev
                    '''
                }
            }
        }

        stage('Build') {
            steps {
                sh 'mvn clean package'
            }
        }

        stage('SAM Build') {
            steps {
                sh 'sam build --template-file HRMS_Organization_Serverless_Dev'
            }
        }

        stage('SAM Deploy') {
            steps {
                sh '''
                    PARAMS=$(jq -r 'to_entries | map(.key + "=" + (.value | tostring)) | join(" ")' HRMS_Organization_Env_Dev)
                    sam deploy \
                    --template-file .aws-sam/build/template.yaml \
                    --stack-name hrms-organization-dev-function \
                    --s3-bucket hrms-organization-dev-source \
                    --parameter-overrides "$PARAMS" \
                    --capabilities CAPABILITY_IAM CAPABILITY_AUTO_EXPAND CAPABILITY_NAMED_IAM \
                    --resolve-image-repos \
                    --no-fail-on-empty-changeset
                '''
            }
        }
        
    }
    post {
        always {
            cleanWs()
        }
        success {
            echo 'Build and deployment completed successfully!'
        }
        failure {
            echo 'Build or deployment failed!'
        }
    }
}
